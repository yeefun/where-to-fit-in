@import "./global.styl"

.report-content
  padding-top 72px
  padding-bottom 64px
  @media (min-width $tablet)
    padding-top 24vh
    padding-bottom 80px
  &__cover
    position absolute
    width 100%
    z-index -1
    top 0
    left 0
    height 360px
    @media (min-width $tablet)
      height 100vh
    & img
      width 100%
      height 100%
      object-fit cover
      object-position top center
  &__wrapper
    max-width 620px
    margin-right auto
    margin-left auto
  & h1
    font-size 3.2rem
    line-height 1.5
    font-weight 700
    color #090909
    text-align center
    max-width 620px
    margin-right auto
    margin-left auto
    @media (min-width $tablet)
      font-size 4.8rem
    @media (min-width $desktop)
      max-width 992px
